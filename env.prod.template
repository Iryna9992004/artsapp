# ============================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Скопіюйте цей файл як .env.prod та змініть значення
# Команда: cp env.prod.template .env.prod
# 
# ВАЖЛИВО: Змініть всі паролі та секрети перед використанням у production!

# ============================================
# БАЗИ ДАНИХ
# ============================================

# PostgreSQL
PG_PASSWORD=your_strong_postgres_password_here

# Redis
REDIS_PASSWORD=your_strong_redis_password_here

# ClickHouse
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=your_strong_clickhouse_password_here
CLICKHOUSE_DB=clickhouse

# ============================================
# JWT СЕКРЕТИ
# ============================================
# ВАЖЛИВО: Використовуйте надійні випадкові рядки!
# Згенерувати можна командою: openssl rand -base64 32

JWT_ACCESS_SECRET=change_this_to_strong_random_secret_for_access_tokens
JWT_REFRESH_SECRET=change_this_to_strong_random_secret_for_refresh_tokens

# ============================================
# FRONTEND URL
# ============================================

FRONTEND_URL=http://localhost:3000

# ============================================
# NEXT.JS PUBLIC URLs (для клієнтського доступу)
# ============================================

NEXT_PUBLIC_AUTH_URL=http://localhost:4000
NEXT_PUBLIC_CHAT_URL=http://localhost:4001
NEXT_PUBLIC_EVENTS_URL=http://localhost:4002
NEXT_PUBLIC_FETCH_URL=http://localhost:4003
NEXT_PUBLIC_POSTS_URL=http://localhost:4004

